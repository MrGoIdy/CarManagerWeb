@model List<CarManagerWeb.Models.Brand>
@{
    ViewBag.Title = "Car Manager";
}

@Styles.Render("~/Content/Brands.css")

@if (Model.Count > 0)
{

    <div class="col-md-4">
        <h3>Brands:</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                </tr>
            </thead>
            @foreach (var brand in Model)
            {
                <tr>
                    <td>
                        @brand.Id
                    </td>
                    <td>
                        @Ajax.ActionLink(
          brand.Name,
          "Models",
          "Home",
          new { brandId = brand.Id, brandName = brand.Name },
          new AjaxOptions() { UpdateTargetId = "models", InsertionMode = InsertionMode.Replace },
          new { }
          )
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="col-md-8" id="models"> <br /> <h4>Please, choose car Brand to see the Model list </h4></div>

}
else
{
    <div class="col-md-12" id="noBrands">
        <h4><span style="color:darkred; text-align:center">There are no Brands found in the DataBase.</span></h4>
    </div>
}